func _on_body_entered(body: CollisionObject2D):
	if body is Player:
		var sprite: Sprite2D = $Sprite2D
		# Move the key's sprite to under the player (in the heirarchy)
		sprite.reparent(body)

		# Move the key to the top left, after any other keys
		sprite.position = Vector2(body.keys.size() * 24 - 176, -96)
		body.keys.push_back(sprite)

		# Delete the rest of the key
		queue_free()
